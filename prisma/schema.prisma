generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

// Enum
enum AccountType {
    Guru
    Siswa
    Vendor
}

enum ReportType {
    VR
    Safety
    SOP
}

enum ReportStatus {
    Pending
    OnProgress
    Completed
}

// Database model
model User {
    id       String      @id @default(uuid())
    email    String      @unique
    username String      @unique
    password String
    role     AccountType

    report_pic Report[]
}

model Registration {
    id    String @id @default(uuid())
    email String @unique
    token String @unique
}

model Report {
    id        String       @id @default(uuid())
    message   String
    type      ReportType
    follow_up AccountType
    status    ReportStatus @default(Pending)
    location  String?

    // Relation
    pic      User   @relation(references: [username], fields: [pic_name])
    pic_name String
}
